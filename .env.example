# Application Configuration
APP_NAME=sti-express
APP_ENV=development
APP_PORT=3000
APP_HOST=localhost
APP_URL=http://${APP_HOST}:${APP_PORT}

# Database Configuration
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=password
DB_NAME=sti_express_db
DB_SYNC=true
DB_LOGGING=false

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1h

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Security
CORS_ORIGIN=*
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=15*60*1000

# External Services
# Add any external service credentials here
# EXAMPLE_SERVICE_API_KEY=your_api_key

# Optional Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG=false
